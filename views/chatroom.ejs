<!DOCTYPE html>
<html ng-app="copernicus" lang="es">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="Content-type" content="text/html; charset=UTF-8">

    <title>Copernicus - Sala</title>

    <% include partials/shared-head %>

    <!-- Hojas de estilos y scripts -->
    <script src="/public/javascripts/navAnimation.js"></script>
    <script src="/lodash/lodash.js"></script>
    <script src="/gridstack/gridstack.js"></script>
    <script src="/fabric.js/fabric.js"></script>
    <script src="/reveal.js/js/reveal.js"></script>

    <link rel="stylesheet" href="/public/stylesheets/chatroom.css">

    <!-- Controladores y Managers -->
    <script src='/public/javascripts/managers/AsistentesManager.js'></script>
    <script src='/public/javascripts/managers/VideollamadasManager.js'></script>
    <script src='/public/javascripts/managers/PresentacionManager.js'></script>
    <script src='/public/javascripts/managers/ChatTextoManager.js'></script>
    <script src='/public/javascripts/managers/DibujosManager.js'></script>
    <script src='/public/javascripts/managers/RadioManager.js'></script>
    <script src='/public/javascripts/managers/VideoCompartidoManager.js'></script>

    <script src='/public/javascripts/controllers/accesoSalaController.js'></script>
    <script src='/public/javascripts/controllers/asistentesController.js'></script>
    <script src='/public/javascripts/controllers/serviciosController.js'></script>
    <script src='/public/javascripts/controllers/videollamadasController.js'></script>
    <script src='/public/javascripts/controllers/dibujosController.js'></script>
    <script src='/public/javascripts/controllers/presentacionController.js'></script>
    <script src='/public/javascripts/controllers/chatTextoController.js'></script>
    <script src='/public/javascripts/controllers/radioController.js'></script>
    <script src='/public/javascripts/controllers/videoCompartidoController.js'></script>
    <script src='/public/javascripts/controllers/langController.js'></script>
</head>
<body>

<div growl></div>

<nav ng-controller="accesoSalaController" class="navbar navbar-default navbar-static-top">
    <div class="navbar-header">
        <a class="navbar-brand" href="index">
            <img width="145px" height="17px" src="/public/fotos/logo.png" alt="Foto logo">
        </a>

        <ul class="nav navbar-nav">
            <li class="active"><a href="index" translate="PAGINA_PRINCIPAL"></a></li>
        </ul>

        <img ng-src="{{selectedSala.foto}}" class="foto-sala" alt="Foto sala"/>
        <span id="nombreSala">{{selectedSala.nombre}}</span>
    </div>
</nav>

<div ng-controller='serviciosController' id="myServiciosnav" class="sideServiciosnav">
    <a href="javascript:void(0)" class="closebtn" onclick="closeNav('myServiciosnav');">&times;</a>
    <h2 id="serviciosLabel">{{'SERVICIOS' | translate}}</h2>
    <a class="servicio" ng-click="addServicio('chatVideo')">{{'CHAT_VIDEO' | translate}}</a>
    <a class="servicio" ng-click="addServicio('chatTexto')">{{'CHAT_TEXTO' | translate}}</a>
    <a class="servicio" ng-click="addServicio('presentaciones')">{{'PRESENTACIONES' | translate}}</a>
    <a class="servicio" ng-click="addServicio('videoCompartido')">{{'VIDEO_COMPARTIDO' | translate}}</a>
    <a class="servicio" ng-click="addServicio('dibujo')">{{'DIBUJOS' | translate}}</a>
    <a class="servicio" ng-click="addServicio('radio')">{{'RADIO' | translate}}</a>
</div>

<div ng-controller='asistentesController' id="myAsistentesnav" class="sideAsistentesnav">
    <a href="javascript:void(0)" class="closebtn"
       onclick="closeNav('myAsistentesnav'); ">&times;</a>
    <h3 id="asistentesLabel">{{'PARTICIPANTES' | translate}}</h3>
    <a ng-repeat="asistente in asistentes" onclick="informacion()">{{asistente.username}} <span
                class="conectado">â€¢</span></a>
    <a ng-show="asistentes.length == 0" translate="{{'NO_PARTICIPANTES' | translate}}"></a>
</div>

<div id="div-hide-navegacion">
    <span class="glyphicon glyphicon-chevron-left" id="esconder-navegacion" onclick="closeNavPrincipal(); "></span>
</div>
<div id="navegacion">
    <span class="opcion-navegacion" onclick="openNav('myServiciosnav'); closeNav('myAsistentesnav'); ">&#9776; {{'SERVICIOS' | translate}}</span>
    <span class="opcion-navegacion" onclick="openNav('myAsistentesnav'); closeNav('myServiciosnav');">&#9776; {{'PARTICIPANTES' | translate}}</span>
</div>

<!-- SERVICIOS -->

<div id="contenedorGridStack">
    <div class="grid-stack"></div>
</div>

</body>

</html>